# editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[package.json]
insert_final_newline = false
indent_size = 2
tab_size = 2

[Makefile]
indent_style = tabs
